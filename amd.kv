#:kivy 1.0.9
MDBoxLayout : 
    orientation : 'vertical'

    MDScreen :
        MDFloatLayout:
            MDLabel:
                id: layout
                text: "Forme geometrique "
                font_size: "24sp"
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
       
        MDRoundFlatIconButton:
            id: my_label
            text: ""
            icon: "file-image"
            pos_hint: {'center_x': 0.5, 'center_y': -1}
            on_release: app.file_manager_open()
            
        
        #bouton qui liste les different menu
        MDFloatingActionButtonSpeedDial : 
            data : app.data  #le dictionnaire data defini les menu avec leur icone qui sont issue de material design icon 
            root_button_anim: True
            hint_animation: True
            right_pad: False

            #pour lancer des actions quand un bouton est clique
            callback: app.callback
        Image:
            id: image
            pos_hint: {'center_x': 0.5, 'center_y': -1}
        
        MDFloatingActionButton:
            id: save_button
            icon: "content-save"
            pos_hint: {'center_x': 0.3, 'center_y': -1}
            on_release: app.save_image()
        MDFloatingActionButton:
            id: close_button
            icon: "close"
            pos_hint: {'center_x': 0.7, 'center_y': -1}
            on_release: app.stop()



       